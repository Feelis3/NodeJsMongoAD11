<%- include('partials/_header') %> <!--PAGINA DE ALUMNOS EN ADMIN-->

<!--CAMBIAR TITULO-->
<script>
    document.title = "Alumnos | CamelMafia";
</script>

<div class="container mt-4">
    <h1 class="mb-3">Lista de Alumnos</h1>
    <table class="table table-striped table-bordered table-hover table-dark">

        <thead>
        <tr>
            <th>Nombre</th>
            <th>Apellidos</th>
            <th>Email</th>
        </tr>
        </thead>

        <tbody>
        <% if (alumnos && alumnos.length > 0) { %>
            <% alumnos.forEach(alumno => { %>
                <tr>
                    <td><%= alumno.name %></td>
                    <td><%= alumno.lastName %></td>
                    <td><%= alumno.email %></td>
                </tr>
            <% }) %>
        <% } else { %>
            <tr>
                <td colspan="3" class="text-center">No hay profesores para mostrar</td>
            </tr>
        <% } %>
        </tbody>

    </table>
</div>



<%- include('partials/_footer') %>
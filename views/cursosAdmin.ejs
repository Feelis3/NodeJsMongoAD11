<%- include('partials/_header') %> <!--Prueba página-->

<div class="container mt-4">
    <h1 class="mb-3">Lista de cursos</h1>
    <table class="table table-striped table-bordered table-hover">

        <thead class="table-dark">
        <tr>
            <th>Nombre</th>
            <th>Año</th>
            <th>Tipo</th>
            <th>Acciones</th>
        </tr>
        </thead>

        <tbody>
        <% if (cursos && cursos.length > 0) { %>
            <% cursos.forEach(curso => { %>
                <tr>
                    <td><%= curso.name %></td>
                    <td><%= curso.year %></td>
                    <td><%= curso.tipo %></td>
                    <td>
                        <a href="/cursos/editCurso/<%= curso._id %>" class="btn btn-warning btn-sm">Editar</a>
                        <form action="/cursos/delete/<%= curso._id %>" method="POST" class="d-inline">
                            <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                        </form>
                    </td>
                </tr>
            <% }) %>
        <% } else { %>
            <tr>
                <td colspan="3" class="text-center">No hay cursos para mostrar</td>
            </tr>
        <% } %>
        </tbody>

    </table>
    <a href="/cursos/addcursos" class="btn btn-primary">Crear Curso</a>
</div>

<%- include('partials/_footer') %>
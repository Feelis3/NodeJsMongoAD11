<%- include('partials/_header') %>
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Registrarse</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Estilos personalizados -->

  <!--CAMBIAR TITULO-->
  <script>
    document.title = "Registrarse | ToadMafia";
  </script>

  <style>
    body {
      background-color: #313338;
    }
    .form-control {
      background-color: #2c3034;
      color: white;
      border: 1px solid #555;
    }
    .form-control::placeholder {
      color: darkgrey;
    }
    .form-control:focus {
      background-color: #1f2225;
      color: white;
      border-color: #007bff;
      box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
    }
    /* Quitar los botones de incremento/decremento en Chrome, Safari y Edge */
    input[type="number"]::-webkit-inner-spin-button,
    input[type="number"]::-webkit-outer-spin-button {
      -webkit-appearance: none;
      margin: 0;
    }
    /* Quitar los botones en Firefox */
    input[type="number"] {
      -moz-appearance: textfield;
    }
    .login-container {
      max-width: 400px;
      margin: 100px auto;
      padding: 20px;
      background: #212529;
      border-radius: 10px;
      color: white;
      border: #212529 solid 1px;
    }
    .login-container h2 {
      text-align: center;
      margin-bottom: 20px;
    }
    .btn-login {
      margin-top: 20px;
      width: 100%;
      border: none;
      padding: 10px;
      border-radius: 5px;
      background-color: #2c3034;
    }
    .enlace {
      color: white;
      font-weight: bold;
    }
  </style>
</head>
<body>
  <div class="login-container">
    <h2>Registrarse</h2>
    <form method="POST" action="/signup">
      <!-- Campo del Nombre -->
      <div class="mb-3">
        <label for="name" class="form-label">Nombre</label>
        <input type="text" class="form-control" id="name" name="name" placeholder="Ingresa tu nombre" required>
      </div>
      <!-- Campo del Apellido -->
      <div class="mb-3">
        <label for="lastName" class="form-label">Apellidos</label>
        <input type="text" class="form-control" id="lastName" name="lastName" placeholder="Ingresa tu apellido" required>
      </div>
      <!-- Campo de la Edad -->
      <div class="mb-3">
        <label for="age" class="form-label">Edad</label>
        <input type="number" class="form-control" id="age" name="age" placeholder="Ingresa tu edad" required>
      </div>
      <!-- Campo de correo electrónico -->
      <div class="mb-3">
        <label for="email" class="form-label">Correo electrónico</label>
        <input type="email" class="form-control" id="email" name="email" placeholder="Ingresa tu correo" required>
      </div>
      <!-- Campo de contraseña -->
      <div class="mb-3">
        <label for="password" class="form-label">Contraseña</label>
        <input type="password" class="form-control" id="password" name="password" placeholder="Ingresa tu contraseña" required>
      </div>
      <!-- Botón de registro -->
      <button type="submit" class="btn btn-login btn-dark">Registrarse</button>
    </form>
    <%if (signupMessage) {%>
      <p style="color:#FF0000;"><%= signupMessage %></p>
    <% } %>
    <!-- Enlace para registrarse -->
    <div class="mt-3 text-center">
      <p>¿Tienes una cuenta? <a href="signin" class="enlace">Inicia sesion</a></p>
    </div>
  </div>

  <!-- Bootstrap JS (opcional, solo si necesitas funcionalidades JS de Bootstrap) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>

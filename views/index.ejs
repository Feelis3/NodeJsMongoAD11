<%- include('partials/_header') %>
<style>
    .header-footer {
        background-color: #007bff;
        color: white;
        padding: 10px 0;
    }
    .card-body {
        background-color: #f8f9fa;
    }
    .card-header {
        background-color: #28a745;
        color: white;
        padding: 10px;
        border-top-left-radius: 0.25rem;
        border-top-right-radius: 0.25rem;
    }
    h4 {
        margin: 1.5rem;
    }
    #mondongo-img {
        max-width: 300px;
    }
</style>
<%if (user){%>
<div class="container mt-4">
    <div class="row row-cols-1 row-cols-md-3 g-4">
        <!-- Tarjeta 1 -->

        <% tasks.forEach(function(asignatura) { %>
        <%console.log(asignatura)%>
        <div class="col">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title"><%= asignatura.nombre %></h5>
                </div>
                <div class="card-body">
                    <p class="card-text"><strong>Curso:</strong> <%=asignatura.curso.name%></p>
                    <p class="card-text"><strong>Profesor: </strong><%= asignatura.profesor %></p>
                </div>
            </div>
        </div>
        <% }) %>
    </div>
</div>
<%}else{%>
    <div class="container mt-4 text-center">
        <h1 class="text-center">Bienvenido a Toad Mafia</h1>
        <h4 class="text-center">Inicie sesión o regístrese para empezar.</h4>
        <img src="../public/resources/mondongo.jpg" class="img-fluid d-block mx-auto" id="mondongo-img" alt="Foto inicio">
    </div>
<%}%>
<%- include('partials/_footer') %>
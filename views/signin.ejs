<%- include('partials/_header') %>
<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login</title>
  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
  <!-- Estilos personalizados -->

  <!--CAMBIAR TITULO-->
  <script>
    document.title = "Iniciar Sesión | ToadMafia";
  </script>

  <style>
    body {
      background-color: #313338;
    }
    .form-control {
      background-color: #2c3034;
      color: white;
      border: 1px solid #555;
    }
    .form-control::placeholder {
      color: darkgrey;
    }
    .form-control:focus {
      background-color: #1f2225;
      color: white;
      border-color: #007bff;
      box-shadow: 0 0 5px rgba(0, 123, 255, 0.5);
    }
    .login-container {
      max-width: 400px;
      margin: 100px auto;
      padding: 20px;
      background: #212529;
      border-radius: 10px;
      color: white;
      border: #212529 solid 1px;
    }
    .login-container h2 {
      text-align: center;
      margin-bottom: 20px;
    }
    .btn-login {
      margin-top: 20px;
      width: 100%;
      border: none;
      padding: 10px;
      border-radius: 5px;
      background-color: #2c3034;
    }
    .enlace {
      color: white;
      font-weight: bold;
    }
  </style>
</head>
<body>
  <div class="login-container">
    <h2>Iniciar Sesión</h2>
    <form method="POST"  action="/signin"> 
      <!-- Campo de correo electrónico -->
      <div class="mb-3">
        <label for="email" class="form-label">Correo electrónico</label>
        <input type="email" class="form-control" id="email" name="email" placeholder="Ingresa tu correo" required>
      </div>
      <!-- Campo de contraseña -->
      <div class="mb-3">
        <label for="password" class="form-label">Contraseña</label>
        <input type="password" class="form-control" id="password" name="password" placeholder="Ingresa tu contraseña" required>
      </div>
      <!-- Botón de inicio de sesión -->
      <button type="submit" class="btn btn-login btn-dark">Iniciar Sesión</button>
    </form>
    <%if (signinMessage) {%>
      <p style="color:#FF0000;"><%= signinMessage %></p>
    <% } %>
    <!-- Enlace para registrarse -->
    <div class="mt-3 text-center">
      <p>¿No tienes una cuenta? <a href="signup" class="enlace">Regístrate</a></p>
    </div>
  </div>
  
  <!-- Bootstrap JS (opcional, solo si necesitas funcionalidades JS de Bootstrap) -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
